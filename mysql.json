{
    "builders": [
        {
            "ami_name": "Percona Server for MySQL {{timestamp}}",
            "instance_type": "t2.micro",
            "region": "us-east-1",
            "source_ami": "ami-6d1c2007",
            "ssh_username": "centos",
            "ssh_pty" : "true",
            "subnet_id" : "subnet-4765a930",
            "security_group_id" : "sg-4378343e",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo yum -y install epel-release",
                "sudo yum -y install ansible bats"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible/mysql/main.yml"
        },
        {
            "type": "file",
            "source": "test/integration/mysql/bats",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "echo bats /tmp/bats/*.bats",
                "sudo yum -y remove bats ansible epel-release libtomcrypt libtommath python-babel python-httplib2 python-jinja2 python-keyczar python-markupsafe python-pyasn1 python2-crypto python2-ecdsa python2-paramiko sshpass"
            ]
        }
    ]
}
