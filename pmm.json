{
    "builders": [
        {
            "ami_name": "PMM Server [{{isotime \"2006-01-02\"}}]",
            "instance_type": "t2.micro",
            "region": "us-east-1",
            "source_ami": "ami-6d1c2007",
            "ssh_username": "centos",
            "ssh_pty" : "true",
            "subnet_id" : "subnet-4765a930",
            "security_group_id" : "sg-4378343e",
            "type": "amazon-ebs",
            "launch_block_device_mappings": [
                {
                    "device_name": "/dev/sda1",
                    "volume_size": 8,
                    "volume_type": "gp2",
                    "delete_on_termination": true
                }
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo yum -y install epel-release",
                "sudo yum -y install ansible bats"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "ansible/pmm/main.yml"
        },
        {
            "type": "file",
            "source": "test/integration/pmm/bats",
            "destination": "/tmp"
        },
        {
            "type": "shell",
            "inline": [
                "echo bats /tmp/bats/*.bats",
                "sudo yum -y remove ansible bats libtomcrypt libtommath python-babel python-httplib2 python-jinja2 python-keyczar python-markupsafe python2-crypto python2-ecdsa python2-paramiko sshpass"
            ]
        }
    ]
}
